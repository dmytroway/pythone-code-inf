---
permalink: "notes/{{ page.fileSlug | slugify }}/"
---
<!DOCTYPE html>
<html lang="{{ meta.mainLanguage }}">
  <head>
    <title>{% if title %}{{ title }}{% else %}{{ page.fileSlug }}{% endif %}</title>
    {%include "components/pageheader.njk"%}
    {% for imp in dynamics.common.head %}
      {% include imp %}
    {% endfor %}
    {% for imp in dynamics.notes.head %}
      {% include imp %}
    {% endfor %}

    <style>
      /* --- 1. СТИЛІ МЕНЮ --- */
      #slide-out-menu {
          position: fixed;
          top: 0;
          left: 0;
          width: 320px; /* Трохи ширше меню для зручності */
          height: 100vh;
          background-color: var(--background-primary);
          border-right: 1px solid var(--background-modifier-border);
          z-index: 9999;
          
          /* Анімація виїзду */
          transform: translateX(-100%); 
          transition: transform 0.3s ease-in-out;
          
          overflow-y: auto;
          box-shadow: 2px 0 15px rgba(0,0,0,0.3);

          /* --- НАЛАШТУВАННЯ ВІДСТУПІВ ВСЕРЕДИНІ МЕНЮ --- */
          /* 80px зверху (щоб не перекривати кнопку) */
          /* 25px зліва і справа (повітря для тексту) */
          padding: 80px 25px 20px 25px; 
          
          /* Щоб відступи не збільшували загальну ширину блоку */
          box-sizing: border-box; 
      }

      #slide-out-menu.is-visible {
          transform: translateX(0);
      }

      /* --- 2. КНОПКА МЕНЮ --- */
      #menu-toggle-btn {
          position: fixed;
          top: 20px;
          left: 20px;
          z-index: 10000; /* Кнопка завжди зверху */
          background: var(--background-secondary);
          color: var(--text-normal);
          border: 1px solid var(--background-modifier-border);
          padding: 8px 15px;
          border-radius: 8px; /* Більш округла кнопка */
          cursor: pointer;
          font-weight: bold;
          font-size: 14px;
          display: flex;
          align-items: center;
          gap: 8px;
          box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      }
      #menu-toggle-btn:hover {
          background: var(--background-modifier-hover);
      }

      /* --- 3. ЦЕНТРУВАННЯ ТЕКСТУ ЗАМІТКИ --- */
      body {
          display: block !important; 
      }
      
      main.content {
          margin: 0 auto !important; 
          max-width: 900px !important; 
          width: 90% !important;
          padding-top: 80px !important; /* Відступ зверху, щоб текст не починався під кнопкою */
      }

      /* --- 4. ЗАТЕМНЕННЯ ФОНУ --- */
      #menu-overlay {
          display: none;
          position: fixed;
          top: 0; left: 0; width: 100%; height: 100%;
          background: rgba(0,0,0,0.6); /* Трохи темніше */
          z-index: 9998;
          backdrop-filter: blur(3px); /* Ефект розмиття фону */
      }
      #menu-overlay.active {
          display: block;
      }

      /* Стиль заголовка "Курс Python" в меню */
      .menu-site-header {
          margin-bottom: 20px; /* Відступ від назви до папок */
          padding-bottom: 10px;
          font-size: 1.4em;
          font-weight: bold;
          border-bottom: 2px solid var(--text-accent); /* Кольорова лінія під назвою */
      }
      .menu-site-header a { 
          text-decoration: none; 
          color: var(--text-normal); 
      }
    </style>
  </head>

  <body class="theme-{{meta.baseTheme}} markdown-preview-view markdown-rendered markdown-preview-section {{meta.bodyClasses}}">
    
    <button id="menu-toggle-btn" onclick="toggleMenu()">
        <i data-lucide="menu"></i> Меню
    </button>

    <div id="menu-overlay" onclick="toggleMenu()"></div>

    <div id="slide-out-menu">
        <div class="menu-site-header">
             <a href="/">{{meta.siteName}}</a>
        </div>
        {%include "components/filetree.njk"%}
    </div>

    <main class="content cm-s-obsidian {{contentClasses}}">
      <header>
        {% if settings.dgShowInlineTitle === true %}
          <h1 data-note-icon="{% if noteIcon %}{{noteIcon}}{% else %}{{meta.noteIconsSettings.default}}{% endif %}">{% if title %}{{ title }}{% else %}{{ page.fileSlug }}{% endif %}</h1>
        {% endif %}
        
        <div class="header-meta">
          {% if settings.dgShowTags === true and tags %}
            <div class="header-tags">
              {% for tag in tags %}
                {% if tag != 'gardenEntry' and tag !='note' %}
                  <a class="tag" onclick="toggleTagSearch(this)">#{{tag}}</a>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
          {%- if meta.timestampSettings.showCreated or meta.timestampSettings.showUpdated -%}
          <div class="timestamps">
            {%- if meta.timestampSettings.showCreated and created -%}
            <div><i data-lucide="calendar-plus"></i> <span class="human-date" data-date="{{created}}"></span></div>
            {%- endif -%}
            {%- if meta.timestampSettings.showUpdated and updated -%}
            <div><i data-lucide="calendar-clock"></i> <span class="human-date" data-date="{{updated}}"></span></div>
            {%- endif -%}
          </div>
          {%- endif -%}
        </div>
        
        {% for imp in dynamics.common.header %} {% include imp %} {% endfor %}
        {% for imp in dynamics.notes.header %} {% include imp %} {% endfor %}
      </header>
      
      {% for imp in dynamics.common.beforeContent %} {% include imp %} {% endfor %}
      {% for imp in dynamics.notes.beforeContent %} {% include imp %} {% endfor %}
      
      {{ content | hideDataview | taggify | link | safe}}
      
      {% for imp in dynamics.common.afterContent %} {% include imp %} {% endfor %}
      {% for imp in dynamics.notes.afterContent %} {% include imp %} {% endfor %}
    </main>

    {%include "components/sidebar.njk"%}

    {% if settings.dgLinkPreview === true %} {%include "components/linkPreview.njk"%} {% endif %}
    {% include "components/references.njk" %}
    {% include "components/timestamps.njk" %}
    {% for imp in dynamics.common.footer %} {% include imp %} {% endfor %}
    {% for imp in dynamics.notes.footer %} {% include imp %} {% endfor %}
    {%include "components/lucideIcons.njk"%}
    {% if contentClasses and "canvas-page" in contentClasses %} {%include "components/canvasScript.njk"%} {% endif %}

    <script>
        function toggleMenu() {
            const menu = document.getElementById('slide-out-menu');
            const overlay = document.getElementById('menu-overlay');
            if (menu.classList.contains('is-visible')) {
                menu.classList.remove('is-visible');
                overlay.classList.remove('active');
            } else {
                menu.classList.add('is-visible');
                overlay.classList.add('active');
            }
        }
    </script>
  </body>
</html>
